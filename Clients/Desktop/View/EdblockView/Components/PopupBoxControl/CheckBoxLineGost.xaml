<UserControl
    x:Class="EdblockView.Components.PopupBoxControl.CheckBoxLineGost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:componentsVM="clr-namespace:EdblockViewModel.ComponentsVM;assembly=EdblockViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=componentsVM:LineStateStandardVM}"
    mc:Ignorable="d">
    <Grid Width="280">
        <materialDesign:PackIcon
            HorizontalAlignment="Left"
            Kind="FileDocument"
            Style="{StaticResource IconSettingsMenu}" />

        <Label
            HorizontalAlignment="Center"
            Content="Вход, выход линий по ГОСТ"
            Style="{StaticResource LabelSettingsMenu}" />

        <CheckBox
            HorizontalAlignment="Right"
            HorizontalContentAlignment="Center"
            IsChecked="{Binding IsDrawingLinesAccordingGOST}"
            Style="{StaticResource CheckBoxSettingsMenu}" />
    </Grid>
</UserControl>