<UserControl
    x:Class="EdblockView.Components.TopSettingsMenu.FormatVerticalAlignComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ListBox
        x:Name="FormatVerticalAlign"
        SelectedIndex="{Binding IndexFormatVerticalAlign}"
        SelectionChanged="SelectFormatVerticalAlign">
        <ListBoxItem Content="{materialDesign:PackIcon Kind=FormatVerticalAlignBottom}" />
        <ListBoxItem Content="{materialDesign:PackIcon Kind=FormatVerticalAlignCenter}" />
        <ListBoxItem Content="{materialDesign:PackIcon Kind=FormatVerticalAlignTop}" />
    </ListBox>
</UserControl>