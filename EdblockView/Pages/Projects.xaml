<UserControl
    x:Class="EdblockView.Pages.Projects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pagesVM="clr-namespace:EdblockViewModel.PagesVM;assembly=EdblockViewModel"
    d:DataContext="{d:DesignInstance Type=pagesVM:ProjectsVM}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            Margin="0,0,20,0"
            Command="{Binding NavigateToEditor}"
            Style="{StaticResource addProjectButton}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="13"
                    Height="13"
                    Margin="0,1,8,0"
                    VerticalAlignment="Center"
                    Kind="Plus" />
                <TextBlock Text="Добавить проект" />
            </StackPanel>
        </Button>
    </Grid>
</UserControl>