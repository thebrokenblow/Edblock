<UserControl x:Class="EdblockView.Components.TopSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:topSettingsPanelControl="clr-namespace:EdblockView.Components.TopSettingsPanelControl"
             xmlns:popupBoxControl="clr-namespace:EdblockView.Components.PopupBoxControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel 
        Background="#f5f5f5" 
        Height="60">

        <GridSplitter Background="Gray" Width="1" Height="40"/>

        <topSettingsPanelControl:FontSizeControl
            Margin="15 0 0 0"/>

        <topSettingsPanelControl:FontFamilyControl
            x:Name="FontFamilyControlUI"
            Margin="20 0 0 0" />

        <GridSplitter Background="Gray" Width="1" Height="40" Margin="20 0 0 0"/>

        <topSettingsPanelControl:FormatAlignmentControl/>

        <GridSplitter Background="Gray" Width="1" Height="40"/>

        <topSettingsPanelControl:FormatTextControl />

        <GridSplitter Background="Gray" Width="1" Height="40"/>

        <Button 
            Margin="7 10 0 0"
            Style="{StaticResource MagnifyMinusPlus}">
            <materialDesign:PackIcon 
                Kind="MagnifyMinusOutline"
                Style="{StaticResource IconCanvasMagnificationReduction}">
            </materialDesign:PackIcon>
        </Button>

        <Button
            Margin="7 10 7 0"
            Style="{StaticResource MagnifyMinusPlus}">
            <materialDesign:PackIcon 
                Kind="MagnifyPlusOutline"
                Style="{StaticResource IconCanvasMagnificationReduction}">
            </materialDesign:PackIcon>
        </Button>

        <GridSplitter Background="Gray" Width="1" Height="40"/>

        <popupBoxControl:PopupBoxMenu x:Name="PopupBoxMenuUI"/>
        
    </DockPanel>
</UserControl>
