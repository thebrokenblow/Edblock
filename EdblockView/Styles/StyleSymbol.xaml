<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BorderSymbol" TargetType="Border">
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="BorderBrush" Value="Blue"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="FrameSymbol" TargetType="Canvas">
        <Setter Property="Width" Value="140" />
        <Setter Property="Height" Value="60" />
    </Style>

    <Style x:Key="TextFieldUI" TargetType="TextBlock">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <Style x:Key="TextField" TargetType="TextBox">
        <Setter Property="Text" Value="{Binding TextField.Text, UpdateSourceTrigger=PropertyChanged}" />
        <Setter Property="FontFamily" Value="{Binding TextField.FontFamily}" />
        <Setter Property="FontSize" Value="{Binding TextField.FontSize}" />
        <Setter Property="Width" Value="{Binding TextField.Width}" />
        <Setter Property="Height" Value="{Binding TextField.Height}" />
        <Setter Property="Cursor" Value="{Binding TextField.Cursor}" />
        <Setter Property="Focusable" Value="{Binding TextField.Focusable}" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="AcceptsReturn" Value="True" />
    </Style>

    <Style x:Key="ConnectionPoint" TargetType="Ellipse">
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="StrokeThickness" Value="1.5" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsShow}" Value="True">
                <Setter Property="Fill" Value="#777777"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsSelect}" Value="True">
                <Setter Property="Stroke" Value="#00FF00"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsHasConnectingLine}" Value="True">
                <Setter Property="Visibility" Value="Hidden"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BorderScaleRectangle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#00FFFFFF" />
        <Setter Property="BorderThickness" Value="2" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsShow}" Value="True">
                <Setter Property="BorderBrush" Value="#FF888888"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ScaleRectangle" TargetType="Rectangle">
        <Setter Property="Width" Value="4" />
        <Setter Property="Height" Value="4" />
        <Setter Property="Fill" Value="Transparent" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsShow}" Value="True">
                <Setter Property="Fill" Value="White"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="LineSymbol" TargetType="Line">
        <Setter Property="X1" Value="{Binding X1}" />
        <Setter Property="Y1" Value="{Binding Y1}" />
        <Setter Property="X2" Value="{Binding X2}" />
        <Setter Property="Y2" Value="{Binding Y2}" />
        <Setter Property="StrokeThickness" Value="1.25"/>
        <Setter Property="Stroke" Value="Black" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                <Setter Property="Stroke" Value="#00FF00"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ArrowSymbol" TargetType="Polygon">
        <Setter Property="Fill" Value="Black" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                <Setter Property="Fill" Value="#00FF00"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="TextFieldLine" TargetType="TextBox">
        <Setter Property="Canvas.Left" Value="{Binding LeftCoordinateTextField}" />
        <Setter Property="Canvas.Top" Value="{Binding TopCoordinateTextField}" />
        <Setter Property="Text" Value="{Binding Text}" />
        <Setter Property="Height" Value="{Binding HeightTextField}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>

    <Style x:Key="BorderMovableRectangleLine" TargetType="Border">
        <Setter Property="Visibility" Value="Hidden" />
        <Setter Property="BorderBrush" Value="#FF888888" />
        <Setter Property="BorderThickness" Value="{Binding BorderThickness}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsShow}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="MovableRectangleLine" TargetType="Rectangle">
        <Setter Property="Width" Value="{Binding Width}" />
        <Setter Property="Height" Value="{Binding Height}" />
        <Setter Property="Fill" Value="White" />
        <Setter Property="Visibility" Value="Hidden" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsShow}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>