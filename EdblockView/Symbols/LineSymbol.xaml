<UserControl x:Class="EdblockView.Symbols.LineSymbol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:symbolsLineVM="clr-namespace:EdblockViewModel.Symbols.LineSymbols;assembly=EdblockViewModel"
             d:DataContext="{d:DesignInstance Type=symbolsLineVM:DrawnLineSymbolVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ItemsControl ItemsSource="{Binding LineSymbols}">
            <ItemsControl.Resources>
                <DataTemplate DataType="{x:Type symbolsLineVM:LineSymbolVM}">
                    <Line Style="{StaticResource LineSymbol}"/>
                </DataTemplate>
            </ItemsControl.Resources>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <Polygon DataContext="{Binding ArrowSymbol}" Points="{Binding PointArrowSymbol}" Fill="Black"/>
    </Grid>
</UserControl>