<UserControl x:Class="EdblockView.SymbolsUI.ParallelActionSymbolUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="330">
    <StackPanel Orientation="Horizontal">
        <Canvas
            Background="Transparent"
            Style="{StaticResource FrameSymbol}">

            <Line 
                X1="0" 
                Y1="20" 
                X2="140" 
                Y2="20" 
                Style="{StaticResource LineCommentSymbol}" />

            <Ellipse
                Margin="70 16"
                Fill="Black"
                Style="{StaticResource ConnectionPoint}"/>

            <Line 
                X1="0" 
                Y1="40" 
                X2="140" 
                Y2="40" 
                Style="{StaticResource LineCommentSymbol}" />

            <Ellipse
                Margin="70 36"
                Fill="Black"
                Style="{StaticResource ConnectionPoint}"/>
        </Canvas>
        <Label 
            Content="Комментарий (12)"
            Margin="10 0 0 0"
            Style="{StaticResource LabelSymbolMenu}"/>
    </StackPanel>
</UserControl>