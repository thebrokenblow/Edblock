<UserControl
    x:Class="Edblock.PagesView.Components.TopSettingsPanel.FontSizeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:Edblock.PagesViewModel.Components.TopSettingsPanel;assembly=Edblock.PagesViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=components:FontSizeViewModel}"
    mc:Ignorable="d">
    <Grid Width="110">
        <Label
            Width="60"
            HorizontalAlignment="Left"
            Content="Font size:"
            Style="{StaticResource LabelTopSettingsPanel}" />

        <ComboBox
            Width="40"
            HorizontalAlignment="Right"
            materialDesign:ComboBoxAssist.MaxLength="2"
            BorderBrush="Black"
            ItemsSource="{Binding FontSizes}"
            SelectedItem="{Binding FontSize}"
            Style="{StaticResource ComboBoxTopSettingsPanel}" />
    </Grid>
</UserControl>
