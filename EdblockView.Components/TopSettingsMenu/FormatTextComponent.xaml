<UserControl
    x:Class="EdblockView.Components.TopSettingsMenu.FormatTextComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:componentsViewModel="clr-namespace:EdblockViewModel.Components.Subjects;assembly=EdblockViewModel.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=componentsViewModel:FormatTextSubject}"
    mc:Ignorable="d">
    <ListBox SelectionMode="Extended">
        <ListBoxItem Content="{materialDesign:PackIcon Kind=FormatBold}" IsSelected="{Binding IsTextBold}" />
        <ListBoxItem Content="{materialDesign:PackIcon Kind=FormatItalic}" IsSelected="{Binding IsTextItalic}" />
        <ListBoxItem Content="{materialDesign:PackIcon Kind=FormatUnderline}" IsSelected="{Binding IsTextUnderline}" />
    </ListBox>
</UserControl>
