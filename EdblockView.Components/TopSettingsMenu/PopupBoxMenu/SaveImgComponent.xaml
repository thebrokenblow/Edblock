<UserControl
    x:Class="EdblockView.Components.TopSettingsMenu.PopupBoxMenu.SaveImgComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EdblockView.Components.TopSettingsMenu.PopupBoxMenu"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Width="280">
        <materialDesign:PackIcon
            HorizontalAlignment="Left"
            Kind="Image"
            Style="{StaticResource IconSettingsMenu}" />

        <Button
            HorizontalAlignment="Right"
            Click="CreateImg"
            Content="Сохранить изображение"
            Style="{StaticResource ButtonSettingsMenu}" />
    </Grid>
</UserControl>
